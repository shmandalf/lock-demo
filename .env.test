APP_NAME="Lock Demo CI"
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database - SQLite for speed
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Cache/Session/Queue - use in-memory drivers
CACHE_STORE=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# Redis (needed for semaphore tests but not for cache)
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# RabbitMQ - disabled in CI
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_QUEUE=semaphore_tasks
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_VHOST=/

# Semaphore
SEMAPHORE_CLASS=\App\Services\Semaphores\RedisSemaphore

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
